<Page x:Class="Глазкова_Труфанова.Pages.PageClassDriver"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Глазкова_Труфанова.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageClassDriver">

    <Grid>
        <DataGrid Name="dtgDriver"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID водителя" Width="auto" 
                                    Binding="{Binding id_driver}"/>
                <DataGridTextColumn Header="ФИО водителя" Width="*"
                                    Binding="{Binding full_name}"/>
                <DataGridTextColumn Header="Телефон" Width="auto" 
                                    Binding="{Binding phone}"/>
                <DataGridTextColumn Header="ID машины" Width="*"
                                    Binding="{Binding id_car}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
